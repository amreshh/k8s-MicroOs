{
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "opentofu.experimentalFeatures.prefillRequiredFields": true,
  "opentofu.codelens.referenceCount": true,
  "opentofu.experimentalFeatures.validateOnSave": true,
  "[terraform]": {
    "editor.defaultFormatter": "gamunu.opentofu",
    "editor.codeActionsOnSave": {
      "source.formatAll.opentofu": "explicit"
    },
  },
  "[terraform-vars]": {
    "editor.defaultFormatter": "gamunu.opentofu",
    "editor.codeActionsOnSave": {
      "source.formatAll.opentofu": "explicit"
    },
  },
  "files.associations": {
    "*.tofu": "terraform",
    "*.ign": "json"
  },
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "microos/ignition/controlplane.yaml",
        "cmd": "butane -p -o ${workspaceFolder}/microos/ignition/controlplane.ign ${workspaceFolder}/microos/ignition/controlplane.yaml",
        "isAsync": true
      },
      {
        "match": "microos/ignition/worker.yaml",
        "cmd": "butane -p -o ${workspaceFolder}/microos/ignition/worker.ign ${workspaceFolder}/microos/ignition/worker.yaml",
        "isAsync": true
      }
    ]
  }
}