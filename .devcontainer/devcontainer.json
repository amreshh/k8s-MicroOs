{
  "name": "k8s-microos",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "shutdownAction": "stopContainer",
  "mounts": [
    "source=/var/run/libvirt/virtqemud-sock,target=/var/run/libvirt/libvirt-sock,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.kube,target=/root/.kube,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.talos,target=/root/.talos,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "VisualStudioExptTeam.vscodeintellicode",
        "docsmsft.docs-markdown",
        "gamunu.opentofu",
        "emeraldwalk.RunOnSave",
        "Codeium.codeium"
      ]
    }
  }
}